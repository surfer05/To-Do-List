<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <ul>

            <%newListItems.forEach(function(item){%>
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle%>">
            </form>
            <%})%>
             
        </ul>
        <form  class="form-bottom" action="/" method="post">
            <input class="new" type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button class="plus" type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>
    </div>
    <p class="cr">&#169Surfer_05</p>
    <%- include("footer") -%>